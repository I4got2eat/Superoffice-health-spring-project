<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Health Spring{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>ðŸŒ±</text></svg>">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% set currentRoute = app.request is defined ? app.request.attributes.get('_route') : null %}

        <div class="{{ app.user ? 'so-app' : '' }}">
            {% if app.user %}
                <aside class="so-sidebar">
                    <div class="so-sidebar-top">
                        <a href="{{ path('app_dashboard') }}" class="so-sidebar-logo">
                            <img src="{{ asset('images/health-spring-logo_new_color.png') }}"
                                 alt="SuperOffice Health Spring"
                                 class="so-logo-img">
                        </a>
                        <button class="so-sidebar-toggle d-lg-none"
                                type="button"
                                aria-label="Toggle navigation"
                                aria-expanded="false">
                            <span></span>
                            <span></span>
                        </button>
                    </div>
                    <div class="so-sidebar-nav-wrapper">
                        <ul class="so-sidebar-nav">
                            <li>
                                <a href="{{ path('app_dashboard') }}"
                                   class="so-sidebar-link {{ currentRoute starts with 'app_dashboard' ? 'so-active' }}">
                                    Dashboard
                                </a>
                            </li>
                            <li>
                                <a href="{{ path('app_leaderboard') }}"
                                   class="so-sidebar-link {{ currentRoute == 'app_leaderboard' ? 'so-active' }}">
                                    Leaderboard
                                </a>
                            </li>
                            {% if is_granted('ROLE_ADMIN') %}
                                <li>
                                    <a href="{{ path('admin_users') }}"
                                       class="so-sidebar-link {{ currentRoute starts with 'admin_' ? 'so-active' }}">
                                        Admin
                                    </a>
                                </li>
                            {% endif %}
                        </ul>
                        <div class="so-sidebar-footer">
                            <div class="so-sidebar-user">Hello, {{ app.user.name }}!</div>
                            <a href="{{ path('app_logout') }}" class="so-sidebar-logout-link">Logout</a>
                        </div>
                    </div>
                </aside>
            {% endif %}

            <main class="{{ app.user ? 'so-main' : '' }}">
                {% if not app.user %}
                    <header class="so-public-header py-3">
                        <div class="container d-flex justify-content-center justify-content-md-start">
                            <img src="{{ asset('images/health-spring-logo.png') }}"
                                 alt="SuperOffice Health Spring"
                                 class="so-logo-img">
                        </div>
                    </header>
                {% endif %}

                {% block body %}{% endblock %}
            </main>
        </div>

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            {# Bootstrap 5 JS CDN #}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
            <script>
                document.addEventListener('DOMContentLoaded', function () {
                    const toggle = document.querySelector('.so-sidebar-toggle');
                    const navWrapper = document.querySelector('.so-sidebar-nav-wrapper');

                    if (!toggle || !navWrapper) {
                        return;
                    }

                    toggle.addEventListener('click', function () {
                        const isOpen = navWrapper.classList.toggle('is-open');
                        toggle.classList.toggle('is-open', isOpen);
                        toggle.setAttribute('aria-expanded', isOpen ? 'true' : 'false');
                    });
                });
            </script>
        {% endblock %}
    </body>
</html>
