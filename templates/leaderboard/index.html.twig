{% extends 'base.html.twig' %}

{% block title %}Leaderboard - Health Spring{% endblock %}

{% block body %}
<div class="container my-4">
    <div class="card">
        <div class="card-header">
            <h3 class="mb-0">ğŸ† Leaderboard</h3>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Rank</th>
                            <th>Participant Name</th>
                            <th>Total Points</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for entry in leaderboard %}
                            <tr {% if entry.user.id == app.user.id %}class="table-primary"{% endif %}>
                                <td>
                                    <strong>#{{ loop.index }}</strong>
                                    {% if loop.index == 1 %}ğŸ¥‡{% elseif loop.index == 2 %}ğŸ¥ˆ{% elseif loop.index == 3 %}ğŸ¥‰{% endif %}
                                </td>
                                <td>
                                    {{ entry.user.name }}
                                    {% if entry.user.id == app.user.id %}<span class="badge bg-primary">You</span>{% endif %}
                                </td>
                                <td><strong>{{ entry.totalScore }}</strong></td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="3" class="text-center text-muted">No participants yet. Be the first!</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
